/**
 * New node file
 */

var socket = io.connect();
			$("form").submit(function(event){
				socket.emit('chat message', $('#m').val());
				$('#m').val('');
				event.preventDefault();
				return false;
			});
			
			socket.on('chat message', function(msg){
			    $('#messages').append($('<li>').text(msg));
			  });