extends ../login_layout

block content
	.container
		h1 Register Page
		p.lead Register a new site
		br
		form(role='form', action="/website/register-website",method="post", style='max-width: 300px;')
			.form-group
				input.form-control(type='text', name="website", placeholder='Website')
			button.btn.btn-default(type='submit') Submit
			a(href='/')
				button.btn.btn-primary(type="button") Cancel
			br
			h4(name="results")
